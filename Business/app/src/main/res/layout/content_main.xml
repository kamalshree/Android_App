<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorbackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.android.business.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/find"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2"
        />
    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finder"
        android:layout_below="@id/imageView2"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textSize="34sp"
        />
    <TextView
        android:id="@+id/address_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234,Park Avenue, Orlando Florida"
        android:layout_below="@id/name_view"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/phone_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-234-4565-432"
        android:layout_below="@id/address_view"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/email_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info@finder.com"
        android:layout_below="@id/phone_view"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"/>

</RelativeLayout>
